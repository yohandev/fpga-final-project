{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--release"
			],
			"options": {
				"cwd": "${workspaceFolder}/server/feather"
			},
			"group": "build",
			"label": "Build Server",
			"hide": true
		},
		{
			"type": "process",
			"command": "${workspaceFolder}/server/feather/target/release/cargo-quill.exe",
			"args": [
				"build",
				"--native",
				"--release"
			],
			"options": {
				"cwd": "${workspaceFolder}/server/plugin"
			},
			"group": "build",
			"label": "Build Plugin",
			"dependsOn": [
				"Build Server"
			],
			"hide": false
		},
		{
			"type": "shell",
			"command": "mkdir -p ${workspaceFolder}/server/dummy/plugins ; cp ${workspaceFolder}/server/feather/target/release/feather-server.exe ${workspaceFolder}/server/dummy ; cp ${workspaceFolder}/server/target/release/fpgacraft-plugin.plugin ${workspaceFolder}/server/dummy/plugins",
			"label": "Prepare Dummy Server",
			"dependsOn": [
				"Build Server",
				"Build Plugin"
			],
			"hide": false
		},
		{
			"type": "shell",
			"command": "cp",
			"label": "Copy plugin to dummy",
			"args": ["${workspaceFolder}/server/target/release/fpgacraft-plugin.plugin", "${workspaceFolder}/server/dummy/plugins"],
			"dependsOn": ["Build Plugin"]
		}
		{
			"type": "process",
			"command": "${workspaceFolder}/server/dummy/feather-server.exe",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--release"
			],
			"options": {
				"cwd": "${workspaceFolder}/server/dummy"
			},
			"label": "Start Server",
			"hide": false,
			"dependsOn": [
				// "Prepare Dummy Server"
				"Copy plugin to dummy"
			]
		},
		{
			"label": "Upload to FPGA",
			"type": "shell",
			"command": "openFPGALoader -b arty_s7_50 ./obj/final.bit",
			"problemMatcher": [],
			"options": {
				"cwd": "./hw"
			}
		},
		{
			"label": "Build with lab-bc",
			"type": "shell",
			"command": "lab-bc run ./src ./obj",
			"problemMatcher": [],
			"options": {
				"cwd": "./hw"
			}
		}
	]
}